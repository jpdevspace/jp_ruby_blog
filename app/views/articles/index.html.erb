<div class="container">
  <h1 class="text-center">List of articles</h1>
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="row justify-content-end mb-3">
        <div class="col-3 text-end">
          <%= link_to "New articles", new_article_path, class: "btn btn-dark" %>
        </div>
      </div>

      <% @articles.each do |article| %>

      <div class="card text-center mb-5 shadow bg-body rounded">
        <div class="card-header fst-italic">
          by Jean Paul Giraldo
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to article.title, article_path(article), class: "text-decoration-none link-dark fs-2 fw-bold" %>
          </h5>
          <p class="card-text"><%= article.description %>></p>
          <%= link_to "Show", article_path(article), class: "btn btn-light me-2" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-light me-2" %>
          <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %>, edited <%= time_ago_in_words(article.updated_at) %></small>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>